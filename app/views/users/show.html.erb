<h1><%= @user.name %>' Photo Map</h1>


<% if @user == current_user %>
<div>
    <%= link_to("Add picture", new_user_picture_path(current_user))%>
</div>
<% end %>

<% if @user == current_user %>
<div>
    <%= link_to("Delete My account", user_path(@user), method: "delete" ,data: {confirm: "Don't leave!!"})%>
</div>
<% end %>

<% @user.pictures.each do |pic| %>
    <div>
        <%= link_to image_tag(pic.url), user_picture_path(@user, pic) %>
        <h2>Location:<%= pic.location %></h2>
        <h2>Caption:<%= pic.caption %></h2>
    </div>
    
    
    
<% end %>

