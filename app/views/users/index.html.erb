<% @users.each do |u| 
    userPic = []%>
    <% @pic.each do |pic| %>
                <% if pic.user_id == u.id %>
                    <% userPic.push(pic.url)%>
                <% end %>
            <% end %>
<div class="card bg-light mb-3" style="width: 25rem; height: 25rem; float:left; margin:0px 20px 10px 0px;">

  <img class="card-img-top" src="<%= userPic.first %>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= link_to(u.name, user_path(u))%></h5>
    <p class="card-text"><%= %></p>

  </div>
</div>
<% end %> 