<div class="container">
<%= image_tag(@picture.url, height: 'auto', width: '100%') %>
<div style="margin:10px 0px 0px 0px">
<% if @picture.user == current_user %>
    <button type="button" class="btn btn-light" >   
      <%= link_to "Edit", edit_user_picture_path(current_user, @picture),{:class => "link-to"} %>
    </button>
<% end %>

<% if @picture.user == current_user %>
    <button type="button" class="btn btn-light" >   
      <%= link_to "Go Back", user_path(current_user, @picture), {:class => "link-to"} %>
    </button>
<% end %>

<% if @picture.user == current_user %>
    <button type="button" class="btn btn-light" style="float:right;"> 
      <%= link_to "Delete", picture_path(@picture), method: "delete", data: {confirm: "Are you sure you wnat to delete this photo?"}, :class => "link-to" %>
    
<% end %>
</button>
</div>
<h4 class="lead">Location: <%= @picture.location%>
    <medium class="text-muted" ,class="lead">Caption: <%= @picture.caption %></small>
</h4>

<h4 class="lead">Notes: <%= @picture.body%></h4>
